{
  "name": "@anchan828/textlint-packages",
  "version": "1.0.0",
  "author": "anchan828 <anchan828@gmail.com>",
  "bugs": {
    "url": "https://github.com/anchan828/textlint-packages/issues"
  },
  "description": "Monorepo packages for textlint (TypeScript)",
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@textlint/ast-node-types": "4.2.5",
    "@textlint/types": "1.3.1",
    "@types/glob": "7.1.2",
    "@types/jest": "26.0.0",
    "@types/node": "11.15.16",
    "@types/prettier": "2.0.1",
    "@typescript-eslint/eslint-plugin": "3.2.0",
    "@typescript-eslint/parser": "3.2.0",
    "eslint": "7.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-sort-keys-fix": "1.1.1",
    "glob": "7.1.6",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "lerna": "3.22.1",
    "lint-staged": "10.2.9",
    "prettier": "2.0.5",
    "textlint-tester": "5.1.15",
    "ts-jest": "26.1.0",
    "ts-node": "8.10.2",
    "typescript": "3.9.5"
  },
  "homepage": "https://github.com/anchan828/textlint-packages#readme",
  "keywords": [
    "textlint"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anchan828/textlint-packages.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "format": "prettier --write '**/*.{json,yml,yaml,md,graphql}'",
    "lint": "eslint --ignore-pattern packages '**/*.ts' && lerna run lint",
    "lint:fix": "eslint --ignore-pattern packages --fix '**/*.ts' && lerna run lint:fix",
    "postinstall": "npm run bootstrap && npm run build",
    "publish": "lerna publish --yes patch",
    "test": "lerna run --parallel test && ts-node scripts/merge-coverage.ts"
  }
}
