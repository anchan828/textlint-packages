{
  "name": "@anchan828/textlint-packages",
  "version": "1.0.0",
  "description": "Monorepo packages for textlint (TypeScript)",
  "keywords": [
    "textlint"
  ],
  "homepage": "https://github.com/anchan828/textlint-packages#readme",
  "bugs": {
    "url": "https://github.com/anchan828/textlint-packages/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anchan828/textlint-packages.git"
  },
  "license": "MIT",
  "author": "anchan828 <anchan828@gmail.com>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "format": "prettier --write '**/*.{json,yml,yaml,md,graphql}'",
    "postinstall": "husky install",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "publish": "lerna publish --yes patch",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@lerna-lite/cli": "1.10.0",
    "@textlint/ast-node-types": "12.2.1",
    "@textlint/types": "12.2.1",
    "@types/glob": "7.2.0",
    "@types/jest": "28.1.7",
    "@types/node": "18.0.0",
    "@types/prettier": "2.7.0",
    "@typescript-eslint/eslint-plugin": "5.33.1",
    "@typescript-eslint/parser": "5.33.1",
    "eslint": "8.22.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "glob": "8.0.3",
    "husky": "8.0.1",
    "jest": "28.1.3",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "textlint-tester": "12.2.1",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.1",
    "turbo": "1.4.3",
    "typescript": "4.7.4"
  }
}
